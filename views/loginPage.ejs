<%- include("header") %>
<div class="container">
    <div class="centerAlign">
      <%- include("messages") %>
        <form method="post" action="/login">
            <h1>Login</h1>
            <div class="table-login">
                <table class="table-login">
                    <tr>
                        
                            <input class="mt-3 radio-login" type="radio" id="studentLoginRB" name="loginUserType" value="Student" checked>
                            <label class="mt-3 radio-login" for="studentLoginRB">Student</label>
                        
                        
                            <input class="mt-3 radio-login" type="radio" id="teacherLoginRB" name="loginUserType" value="Teacher">
                            <label class="mt-3 radio-login" for="teacherLoginRB">Teacher</label><br>
                       
                        
                    </tr>
                    <tr>
                        <td style="text-align:left"><label class="mt-3">ID</label></td>
                        <td><input class="mt-3" type="text" name="ID" placeholder="ID"></td>
                    </tr>
                    <tr>
                        <td style="text-align:left"><label>Password </label></td>
                        <td><input class="mt-3" type="password" name="password" placeholder="Password"></td>
                    </tr>
                    <tr>
                        <td id="login-button" colspan="2"><input class="mt-3 btn btn-primary" type="submit" value="Login"></td>
                    </tr>
                </table>
            </div>
            

            
        </form>
    </div>
</div>
<%- include("footer") %>