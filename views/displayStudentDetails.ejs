<%- include("header") %>
<div class="container-fluid">
    <div class="centerAlign">
        <h1>Display Student Details</h1>
        <form action="/displayStudentDetails" method="post">
            <label class="mt-3" for="semSelect">Student ID</label>
            <input type="text" name="studentId" id="studentId" placeholder="Student ID">
            <br>
            <input type="submit" value="Display Student Details" class="btn btn-success mt-3">
            <a href="/teacherLanding" class="btn btn-danger mt-3">Cancel</a>
        </form>
        <% if(typeof studentDetails !== 'undefined') { %>

        <table class="mt-3">
            <tr>
                <th>Student ID</th>
                <td><%=studentDetails.sId %></td>
              </tr>
              <tr>
                <th>Name</th>
                <td><%=studentDetails.sName %></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%=studentDetails.sEmail %></td>
              </tr>
              <tr>
                <th>Phone</th>
                <td><%=studentDetails.sPhone %></td>
              </tr>
              <tr>
                <th>Parent Phone</th>
                <td><%=studentDetails.sParentPhone %></td>
              </tr>
              <tr>
                <th>Semester</th>
                <td><%=studentDetails.sSemester %></td>
              </tr>
              <tr>
                <th>Department</th>
                <td><%=studentDetails.sDepartment %></td>
              </tr>
              <tr>
                <th>Active</th>
                <% if (studentDetails.isStudentActive == true) { %>
                <td>Yes</td>
                <% } else { %>
                    <td>No</td>
                <% } %>
              </tr>
        </table>
        <% } %>
    </div>
</div>
<%- include("footer") %>