<%- include("header") %>
<div class="container">
    <div class="centerAlign">
        <h1>Create Course</h1>
        <form action="/createCourse" method="post">
            <label class="mt-3" for="semSelect">Semester</label>
            <select class="mt-3" name="cSemester" id="semSelect">
            <option value="S1">S1</option>
            <option value="S2">S2</option>
            <option value="S3">S3</option>
            <option value="S4">S4</option>
            <option value="S5">S5</option>
            <option value="S6">S6</option>
            <option value="S7">S7</option>
            <option value="S8">S8</option>
            </select>
            <br>
            <label class="mt-3">Course ID</label>
            <input class="mt-3" type="text" placeholder="ID" name="cid">
            <br>
            <label class="mt-3">Course Name</label>
            <input class="mt-3" type="text" placeholder="course Name" name="cName">
            <br>
            <input type="submit" value="Confirm" class="btn btn-success mt-3">
            <input type="button" value="Cancel" class="btn btn-danger mt-3">
        </form>
    </div>
</div>
<%- include("footer") %>