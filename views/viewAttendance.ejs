<%- include("header") %>
<div class="container-fluid">
    <div class="centerAlign">
        <h1>View Attendance</h1>
        <form action="/viewAttendance" method="post">
            <label class="mt-3" for="semSelect">Semester</label>
            <select class="mt-3" name="semSelect" id="semSelect">
                <option value="S1">S1</option>
                <option value="S2">S2</option>
                <option value="S3">S3</option>
                <option value="S4">S4</option>
                <option value="S5">S5</option>
                <option value="S6">S6</option>
                <option value="S7">S7</option>
                <option value="S8">S8</option>
            </select>
            <label class="mt-3 ml-3" for="courseSelect">Select Course</label>
            <select class="mt-3" name="courseSelect" id="courseSelect">
                <% for(let i = 0; i < courseList.length; i++) { %>
                    <option value="<%= courseList[i].cid %>"><%= courseList[i].cName %></option>
                <% } %>
            </select>
            <br>
            <input type="submit" value="View Attendance" class="btn btn-success mt-3">
            <input type="button" value="Cancel" class="btn btn-danger mt-3">
        </form>
    </div>
    <div class="studentDisplayTable">
        <table class="table mt-2 table-bordered table-sm">
            <thead class="thead-dark">
                <tr>
                    <td>Date</td>
                    <td>Day</td>
                    <td>Present/Absent</td>
                </tr>
            </thead>
            <tbody class="table-striped">
                <% if(studentDetails) { %>
                    <% for(let i = 0; i < studentDetails.length; i++) { %>
                        <tr>
                            <td><%= studentDetails[i].sId %></td>
                            <!-- <td><%= studentDetails[i].sName %></td> -->
                            <td>Day</td>
                            <td>Present</td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include("footer") %>